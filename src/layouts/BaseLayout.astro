---
import '../styles/global.css'

interface Props {
  title: string
  description: string
  ogImage?: string
}

const { title, description, ogImage } = Astro.props
const canonicalUrl = Astro.site ? new URL(Astro.url.pathname, Astro.site) : Astro.url
const ogImageUrl = ogImage
  ? Astro.site
    ? new URL(ogImage, Astro.site).toString()
    : ogImage
  : null
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {ogImageUrl && <meta property="og:image" content={ogImageUrl} />}
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {ogImageUrl && <meta name="twitter:image" content={ogImageUrl} />}
  </head>
  <body class="min-h-screen">
    <slot />
  </body>
  <script>
    import { log, setUrl } from '@logkit/client'

    setUrl('https://walkingdevs.logk.it/')

    let lastPath: string | null = null

    function trackPageview() {
      if (lastPath === window.location.pathname) return
      lastPath = window.location.pathname

      const url = new URL(window.location.href)
      const utmParams: Record<string, string> = {}

      ;['utm_source', 'utm_medium', 'utm_campaign', 'utm_term', 'utm_content'].forEach((key) => {
        const value = url.searchParams.get(key)
        if (value) utmParams[key] = value
      })

      log('pageview', {
        origin: window.location.origin,
        pathname: window.location.pathname,
        referrer: document.referrer,
        ...utmParams,
      })
    }

    // Initial pageview
    trackPageview()

    // Client-side navigation (SPA routers / View Transitions)
    const originalPushState = history.pushState
    history.pushState = function (...args) {
      originalPushState.apply(this, args)
      trackPageview()
    }

    // Back/forward buttons
    window.addEventListener('popstate', trackPageview)
  </script>
</html>
